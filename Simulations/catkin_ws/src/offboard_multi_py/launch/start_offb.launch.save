<?xml version="1.0"?>
<launch>
    <!-- Include PX4 + MAVROS + SITL with your custom world and drone -->
    <include file="$(find px4)/launch/mavros_posix_sitl.launch">
        <arg name="vehicle" value="typhoon_h480" />
        <arg name="world" value="$(find mavlink_sitl_gazebo)/worlds/custom/realistic_grass.world" />
    </include>

    <!-- Your offboard control node -->
    <node pkg="camera_offboard_py" type="camera_node.py" name="camera_node_py" required="true" output="screen" />
</launch>
